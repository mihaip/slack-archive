{
  "conversation-archive": {
    "title": {
      "font-size": "20pt",
      "font-weight": "bold",
      "margin": "0",
      "border-bottom": "dashed 1px #ccc"
    },
    "subtitle": {
      "font-size": "9pt",
      "margin": "0.2em 0 1.3em 0",
      "color": "#9e9ea6"
    }
  },
  "conversation": {
    "hash": {
      "opacity": "0.5",
      "padding-right": ".2ex"
    },
    "lock": {
      "padding-right": ".2ex"
    },
    "mpdm-count": {
        "opacity": "0.3",
        "color": "#fff",
        "background": "#000",
        "border-radius": "3px",
        "width": "2.5ex",
        "height": "2.5ex",
        "line-height": "2.5ex",
        "display": "inline-block",
        "text-align": "center",
        "font-size": "80%",
        "margin-right": ".4ex"
    },
    "user-image": {
      "vertical-align": "text-bottom",
      "margin-right": ".2ex",
      "border-radius": "3px"
    }
  },
  "message-group": {
    "margin": "4px 0",
    "author-image": {
      "float": "left",
      "margin-right": "10px",
      "border-radius": "3px"
    },
    "body": {
      "overflow": "hidden",
      "line-height": "18px"
    },
    "timestamp": {
      "color": "#9e9ea6",
      "font-size": "9pt"
    },
    "bot-badge": {
      "font-size": "9pt",
      "color": "#bbb",
      "background": "#f3f3f3",
      "border-radius": "2px",
      "padding": "0 2px"
    }
  },
  "message": {
    "margin": "2px 0",
    "blockquote": {
      "border-left": "solid 4px #ddd",
      "padding-left": "1ex",
      "margin": "0"
    },
    "automated": {
      "font-style": "italic",
      "color": "#9e9ea6"
    },
    "me": {
      "font-style": "italic"
    },
    "link": {
      "color": "#4183c4",
      "text-decoration": "none"
    },
    "code": {
      "color": "#c25",
      "background-color": "#f7f7f9",
      "border": "solid 1px #e1e1e8",
      "border-radius": "3px"
    },
    "attachment": {
      "margin": "2px 0",
      "overflow": "hidden",
      "author": {
        "margin-bottom": "2px",
        "font-weight": "bold",
        "icon": {
          "vertical-align": "middle",
          "border-radius": "3px"
        },
        "subname": {
          "color": "#999",
          "font-weight": "normal"
        }
      },
      "body": {
        "border-left": "solid 4px #ddd",
        "padding-left": "1ex",
        "margin": "0"
      },
      "title": {
        "font-size": "110%",
        "font-weight": "bold",
        "margin-bottom": "2px"
      },
      "thumb": {
        "float": "right",
        "max-width": "75px",
        "max-height": "75px",
        "border-radius": "3px"
      },
      "image": {
        "max-height": "200px",
        "border": "0",
        "border-radius": "4px",
        "border": "solid 1px rgba(0, 0, 0, 0.1)"
      },
      "field": {
        "title": {
          "font-weight": "bold"
        },
        "table": {
          "width": "100%"
        }
      }
    },
    "file": {
        "preview": {
            "margin": "2px 0 4px",
            "border": "solid 1px #ccc",
            "border-radius": "6px",
            "padding": "0 15px",
            "color": "#333",
            "title": {
                "font-size": "110%",
                "font-weight": "bold",
                "margin-top": "4px",
                "display": "block"
            }
        }
    },
    "reaction": {
      "display": "inline-block",
      "border": "solid 1px #eee",
      "border-radius": "5px",
      "padding": "1px 3px",
      "count": {
        "color": "#999",
        "font-size": "9pt"
      }
    },
    "replies": {
      "header": {
        "color": "#999",
        "font-weight": "bold"
      },
      "body": {
        "border-left": "solid 4px #ddd",
        "padding-left": "1ex",
        "margin": "0"
      }
    }
  },
  "email-footer": {
    "color": "#999",
    "font-size": "9pt",
    "paragraph": {
      "margin": "0.5em 0"
    },
    "link": {
      "text-decoration": "none",
      "color": "#4183c4"
    }
  }
}
